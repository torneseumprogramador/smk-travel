@model smk_travel.Models.ArquivoDeFuncionario

@{
    var funcionario = (Funcionario)ViewData["Funcionario"];
    ViewData["Title"] = "Upload de um novo arquivo do " + funcionario.Nome;
}

<h1>Upload de um novo arquivo do @funcionario.Nome</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Arquivo" class="control-label"></label>
                <input type="file" required="required" asp-for="Arquivo" class="form-control" />
            </div>
            <hr>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
                <a href="/funcionarios/@funcionario.Id/ArquivoDeFuncionarios" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>
<br>
