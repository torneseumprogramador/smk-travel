@model smk_travel.Models.ArquivoDeFuncionario

@{
    var funcionario = (Funcionario)ViewData["Funcionario"];
    var arquivoDeFuncionario = (ArquivoDeFuncionario)Model;
    ViewData["Title"] = "Delete";
}

<h1>Apagar arquivo de @funcionario.Nome</h1>

<h3>Deseja realmente apagar?</h3>
<div>
    <dl class="row">
        <div>
            @Html.DisplayNameFor(model => model.Arquivo)
        </div>
        <dd class = "col-sm-10">
            <a href="@arquivoDeFuncionario.Arquivo" target="_blank">
                @Html.Raw(smk_travel.Helpers.ApplicationHelper.RenderHtmlFile(arquivoDeFuncionario.Arquivo, 400));
            </a>
        </dd>
    </dl>
    
    <form action="/funcionarios/@funcionario.Id/ArquivoDeFuncionarios/Delete/@arquivoDeFuncionario.Id">
        <input type="hidden" value=""/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" href="/funcionarios/@funcionario.Id/ArquivoDeFuncionarios">Voltar</a>
    </form>
</div>
